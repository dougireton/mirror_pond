" define mapping to toggle Tagbar window
nnoremap <leader>tb :TagbarToggle<CR>

" Auto close tagbar window after selecting tag
let g:tagbar_autoclose = 1

" Move cursor to Tagbar window upon opening
let g:tagbar_autofocus = 1

" Sort tags acording to their order in the source file
let g:tagbar_sort = 0

" Eliminate 'Press F1 for help' message
let g:tagbar_compact = 1
